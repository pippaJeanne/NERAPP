body{margin:0;
  background-color: black;}
img{
  top:0px;
  width:100%;
  height:98vh;
  opacity:.7;
  /*margin: 7rem 0 1rem 37%;*/
}
a{text-decoration: none;}
#text{
position:relative;
top: -2rem;
